    <script>
        function ysYonlendir(ID, adres, saniye) {
            if (saniye == 0) {
                window.location.href = adres;
                return;
            }
            document.getElementById(ID).innerHTML = saniye + " saniye sonra yönlendiriliyorsunuz.";
            saniye--;
            setTimeout(function () {
                ysYonlendir(ID, adres, saniye);
            }, 1000);
        }
    </script>
